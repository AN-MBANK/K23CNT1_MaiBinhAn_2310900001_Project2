@model IEnumerable<ECommerceMVC.ViewModels.HangHoaVM>

@foreach (var item in Model)
{
	<div class="col-md-6 col-lg-6 col-xl-4">
		<div class="rounded position-relative fruite-item">
			<div class="fruite-img">
				<a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh">
					<img src="~/@item.Hinh" class="img-fluid w-100 rounded-top" alt="@item.TenHH" style="width: 100px; height: 300px">
				</a>
				
			</div>
			<div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.TenLoai
			
                
            </div>
			<div>

                <span class="text-white> bg-warning px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">
                    GIẢM GIÁ-20%
                    <p class="text-dark fs-5 fw-bold mb-0">$@item.DonGia</p>
                </span>
            </div>
			<div class="p-4 border border-secondary border-top-0 rounded-bottom">
				<a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh"><h4 style="height: 100px">@item.TenHH</h4></a>
				<p>@item.MoTaNgan</p>
				
			</div>
		</div>
	</div>
}